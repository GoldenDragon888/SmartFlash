<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/my_background_color"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- ImageView for the Header -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:src="@drawable/android_sfp_header"
            android:scaleType="fitXY" />

        <!-- Toolbar with Hamburger Icon -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="60dp"
            android:layout_height="45dp"
            android:layout_toRightOf="@id/imageView"
            android:background="@color/flash_blue"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

        <!-- ScrollView for Calendar View, DayNote, and TodoNote -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/layoutSaveButtons"
            android:layout_below="@id/imageView">

            <!-- Main Container for All Elements -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

            <!-- Calendar View -->
            <com.prolificinteractive.materialcalendarview.MaterialCalendarView
                android:id="@+id/calendarView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

                <!-- Search Bar and Today Button in a Horizontal Layout -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/editTextSearch"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColorHint="@android:color/black"
                        android:textColor="@android:color/black"
                        android:hint="Search notes"
                        android:inputType="text"/>

                    <com.google.android.material.button.MaterialButton
                        style="@style/CustomButtonStyle"
                        android:id="@+id/btnToday"
                        android:layout_width="90dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="5.0dip"
                        android:layout_marginRight="5.0dip"
                        android:text="Today"/>
                    <com.google.android.material.button.MaterialButton
                        style="@style/CustomButtonStyle"
                        android:id="@+id/btnSwitchviews"
                        android:layout_width="90dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="5.0dip"
                        android:layout_marginRight="5.0dip"
                        android:text="Switch"/>
                </LinearLayout>
            <!-- Vertical LinearLayout for DayNote and TodoNote -->
            <LinearLayout
                android:id="@+id/daynotesContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <TextView
                    android:id="@+id/dayNoteHeader"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Day Note"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />
                <com.google.android.material.button.MaterialButton
                    style="@style/CustomButtonStyle"
                    android:id="@+id/btnToggleDayNotes"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:textColor="@android:color/black"
                    android:layout_marginLeft="5.0dip"
                    android:layout_marginRight="0.0dip"
                    android:text="Hide"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/dayNoteFormattingButtonsContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone" />

                <jp.wasabeef.richeditor.RichEditor
                    android:id="@+id/dayNoteRichEditor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="top"
                    android:backgroundTint="@color/light_green"
                    android:inputType="textMultiLine"
                    android:background="@drawable/edit_text_border"
                    android:padding="5dp"
                    android:scrollbars="vertical" />
            </LinearLayout>

            <!-- TodoNote Section -->
            <LinearLayout
                android:id="@+id/todonotesContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp"
                android:layout_marginTop="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <TextView
                    android:id="@+id/todoNoteHeader"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Todo Note"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />
                <com.google.android.material.button.MaterialButton
                    style="@style/CustomButtonStyle"
                    android:id="@+id/btnToggleTodoNotes"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:textColor="@android:color/black"
                    android:layout_marginLeft="5.0dip"
                    android:layout_marginRight="0.0dip"
                    android:text="Hide"/>
                </LinearLayout>

                <!-- Placeholder for Todo Note Formatting Buttons -->
                <LinearLayout
                    android:id="@+id/todoNoteFormattingButtonsContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone" />

                <jp.wasabeef.richeditor.RichEditor
                    android:id="@+id/todoNoteRichEditor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/light_green"
                    android:gravity="top"
                    android:inputType="textMultiLine"
                    android:background="@drawable/edit_text_border"
                    android:padding="5dp"
                    android:scrollbars="vertical" />
            </LinearLayout>
                <!-- Daily Insights Section -->
                <LinearLayout
                    android:id="@+id/dailyInsightsContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="5dp"
                    android:layout_marginTop="10dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                    <TextView
                        android:id="@+id/dailyInsightsHeader"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Daily Insights"
                        android:textColor="@android:color/black"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                    <com.google.android.material.button.MaterialButton
                        style="@style/CustomButtonStyle"
                        android:id="@+id/btnToggleInsights"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:textColor="@android:color/black"
                        android:layout_marginLeft="5.0dip"
                        android:layout_marginRight="0.0dip"
                        android:text="Hide"/>
                    </LinearLayout>

                    <!-- Placeholder for Todo Note Formatting Buttons -->
                    <LinearLayout
                        android:id="@+id/dailyInsightsFormattingButtonsContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="gone" />

                    <jp.wasabeef.richeditor.RichEditor
                        android:id="@+id/dailyInsightsRichEditor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/light_blue"
                        android:gravity="top"
                        android:inputType="textMultiLine"
                        android:background="@drawable/edit_text_border"
                        android:padding="10dp"
                        android:scrollbars="vertical" />
                </LinearLayout>
        </LinearLayout>
    </ScrollView>

        <!-- Save Buttons Layout -->
        <LinearLayout
            android:id="@+id/layoutSaveButtons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_above="@id/layoutControls"
            android:padding="5dp"
            android:gravity="center">

            <!-- Save Day Note Button -->
            <com.google.android.material.button.MaterialButton
                style="@style/CustomButtonStyle"
                android:id="@+id/saveNoteButton"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginLeft="5.0dip"
                android:layout_marginRight="5.0dip"
                android:layout_weight="1"
                android:text="Save both Notes" />


        </LinearLayout>

        <!-- Bottom Controls Layout -->
        <LinearLayout
            android:id="@+id/layoutControls"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:padding="5dp">

            <!-- Home Button -->
            <com.google.android.material.button.MaterialButton
                style="@style/CustomButtonStyle"
                android:id="@+id/btnHome"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginLeft="5.0dip"
                android:layout_marginRight="5.0dip"
                android:layout_weight="1"
                android:text="Home"/>
            <!-- Refresh Notes Button -->
            <com.google.android.material.button.MaterialButton
                style="@style/CustomButtonStyle"
                android:id="@+id/btnRefresh"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginLeft="5.0dip"
                android:layout_marginRight="5.0dip"
                android:layout_weight="1"
                android:text="Refresh"/>
        </LinearLayout>

    </RelativeLayout>

    <!-- Navigation Drawer -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        android:backgroundTint="@color/flash_blue"
        app:itemTextColor="@color/white"
        app:menu="@menu/nav_menu" />
</androidx.drawerlayout.widget.DrawerLayout>