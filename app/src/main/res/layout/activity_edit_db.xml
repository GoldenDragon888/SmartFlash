<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/my_background_color"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Main Content Layout -->
    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- ImageView for the Header -->
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:src="@drawable/android_sfp_header"
        android:scaleType="fitXY" />

        <!-- Toolbar with Hamburger Icon -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="60dp"
            android:layout_height="45dp"
            android:background="@color/flash_blue"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    <LinearLayout
        android:id="@+id/editFields"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView">

        <androidx.cardview.widget.CardView
            android:layout_width="fill_parent"
            android:layout_height="36.0dip"
            android:layout_margin="2.0dip"
            android:layout_marginTop="16.0dip"
            android:layout_weight="3.0"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="10.0dip"
            app:cardElevation="5.0dip">
            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
                <EditText
                    android:textSize="20.0sp"
                    android:gravity="center"
                    android:id="@+id/editTextCategory"
                    android:layout_width="fill_parent"
                    android:layout_height="40.0dip"
                    android:hint="New Category"
                    android:textColor="@android:color/black"
                    android:textColorHint="@android:color/black"
                    android:lines="2"
                    android:inputType="textMultiLine"
                    app:autoSizeMaxTextSize="24.0sp"
                    app:autoSizeMinTextSize="12.0sp"
                    app:autoSizeStepGranularity="2.0sp"
                    app:autoSizeTextType="uniform" />
            </FrameLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="fill_parent"
            android:layout_height="36.0dip"
            android:layout_margin="2.0dip"
            android:layout_marginTop="16.0dip"
            android:layout_weight="3.0"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="10.0dip"
            app:cardElevation="5.0dip">
            <FrameLayout android:layout_width="fill_parent"
                android:layout_height="fill_parent">
                <EditText
                    android:textSize="20.0sp"
                    android:gravity="center"
                    android:id="@+id/editTextSubcat"
                    android:layout_width="fill_parent"
                    android:layout_height="40.0dip"
                    android:hint="New Subcat"
                    android:textColorHint="@android:color/black"
                    android:textColor="@android:color/black"
                    android:lines="2"
                    android:inputType="textMultiLine"
                    app:autoSizeMaxTextSize="24.0sp"
                    app:autoSizeMinTextSize="12.0sp"
                    app:autoSizeStepGranularity="2.0sp"
                    app:autoSizeTextType="uniform" />
            </FrameLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="fill_parent"
            android:layout_height="36.0dip"
            android:layout_margin="2.0dip"
            android:layout_marginTop="16.0dip"
            android:layout_weight="3.0"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="10.0dip"
            app:cardElevation="5.0dip">
            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
                <EditText
                    android:textSize="20.0sp"
                    android:gravity="center"
                    android:id="@+id/editTextItem"
                    android:layout_width="fill_parent"
                    android:layout_height="40.0dip"
                    android:hint="Item"
                    android:textColorHint="@android:color/black"
                    android:textColor="@android:color/black"
                    android:lines="2"
                    android:inputType="textMultiLine"
                    app:autoSizeMaxTextSize="24.0sp"
                    app:autoSizeMinTextSize="12.0sp"
                    app:autoSizeStepGranularity="2.0sp"
                    app:autoSizeTextType="uniform" />
            </FrameLayout>
        </androidx.cardview.widget.CardView>

        <!-- Description CardView -->
        <androidx.cardview.widget.CardView
            android:layout_width="fill_parent"
            android:layout_height="65.0dip"
            android:layout_margin="2.0dip"
            android:layout_weight="3.0"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="10.0dip"
            app:cardElevation="5.0dip">
            <EditText
                android:id="@+id/editTextDescription"
                android:layout_width="fill_parent"
                android:layout_height="65.0dip"
                android:gravity="center"
                android:hint="Description"
                android:background="@android:color/transparent"
                android:padding="8dp"
                android:textColor="@android:color/black" />
        </androidx.cardview.widget.CardView>

        <!-- Details CardView -->
        <androidx.cardview.widget.CardView
            android:layout_width="fill_parent"
            android:layout_height="145.0dip"
            android:layout_margin="2.0dip"
            android:layout_weight="3.0"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="10.0dip"
            app:cardElevation="5.0dip">
            <EditText
                android:id="@+id/editTextDetails"
                android:layout_width="fill_parent"
                android:layout_height="140.0dip"
                android:gravity="center"
                android:hint="Details"
                android:background="@android:color/transparent"
                android:padding="8dp"
                android:textColor="@android:color/black" />
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="fill_parent"
            android:layout_height="40.0dip"
            android:layout_margin="2.0dip"
            android:layout_marginTop="16.0dip"
            android:layout_weight="3.0"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="10.0dip"
            app:cardElevation="5.0dip">
            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
                <Spinner
                    android:id="@+id/spinnerDifficulty"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="center_vertical"

                    android:padding="0dp"/>
            </FrameLayout>
        </androidx.cardview.widget.CardView>


    <ImageView
        android:id="@+id/associated_image"
        android:background="?android:selectableItemBackground"
        android:focusable="true"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="180.0dip"
        android:src="@drawable/smartflashnoimage"
        android:scaleType="fitCenter"
        android:layout_marginStart="16.0dip"
        android:layout_marginEnd="16.0dip"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:id="@+id/catButtons"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toTopOf="@id/deletecatButtons"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
        <com.google.android.material.button.MaterialButton
            style="@style/CustomButtonStyle"
            android:id="@+id/buttonCategory"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_marginBottom="0dp"
            android:gravity="center"
            android:layout_marginLeft="3.0dip"
            android:layout_marginRight="3.0dip"
            android:text="Select Category"
           />
        <com.google.android.material.button.MaterialButton
            style="@style/CustomButtonStyle"
            android:id="@+id/buttonSubcat"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_marginBottom="0dp"
            android:gravity="center"
            android:layout_marginLeft="3.0dip"
            android:layout_marginRight="3.0dip"
            android:text="Select Subcat"
            android:backgroundTint="@color/flash_blue" />
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:id="@+id/deletecatButtons"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        app:layout_constraintTop_toBottomOf="@+id/catButtons"
        app:layout_constraintBottom_toTopOf="@id/layoutButtons"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <com.google.android.material.button.MaterialButton
            style="@style/CustomButtonStyle"
            android:id="@+id/buttonDeleteCategory"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:layout_marginLeft="3.0dip"
            android:layout_marginRight="3.0dip"
            android:text="Delete entire Category"
            android:backgroundTint="@color/dark_red" />
        <com.google.android.material.button.MaterialButton
            style="@style/CustomButtonStyle"
            android:id="@+id/buttonDeleteSubcat"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:layout_marginLeft="3.0dip"
            android:layout_marginRight="3.0dip"
            android:text="Delete entire Subcat"
            android:backgroundTint="@color/dark_red" />
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:id="@+id/layoutButtons"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        app:layout_constraintTop_toBottomOf="@id/deletecatButtons"
        app:layout_constraintBottom_toTopOf="@id/navButtons"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
        <com.google.android.material.button.MaterialButton
            style="@style/CustomButtonStyle"
            android:id="@+id/buttonDelete"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center"
            android:layout_marginLeft="3.0dip"
            android:layout_marginRight="3.0dip"
            android:layout_marginBottom="0dp"
            android:text="Delete"
            android:backgroundTint="@color/dark_red" />
        <com.google.android.material.button.MaterialButton
            style="@style/CustomButtonStyle"
            android:id="@+id/buttonNew"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center"
            android:layout_marginLeft="3.0dip"
            android:layout_marginRight="3.0dip"
            android:layout_marginBottom="0dp"
            android:text="New"
            android:backgroundTint="@color/dark_green" />
        <com.google.android.material.button.MaterialButton
            style="@style/CustomButtonStyle"
            android:id="@+id/buttonUpdate"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center"
            android:layout_marginLeft="3.0dip"
            android:layout_marginRight="3.0dip"
            android:layout_marginBottom="0dp"
            android:text="Update"
            android:backgroundTint="@color/blue" />
        <com.google.android.material.button.MaterialButton
            style="@style/CustomButtonStyle"
            android:id="@+id/cleanUpButton"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center"
            android:layout_marginLeft="3.0dip"
            android:layout_marginRight="3.0dip"
            android:layout_marginBottom="0dp"
            android:text="X Nulls"
            android:backgroundTint="@color/dark_red" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/navButtons"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <com.google.android.material.button.MaterialButton
            style="@style/CustomButtonStyle"
            android:id="@+id/buttonBack"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center"
            android:layout_marginLeft="3.0dip"
            android:layout_marginRight="3.0dip"

            android:text="Back" />
        <com.google.android.material.button.MaterialButton
            style="@style/CustomButtonStyle"
            android:id="@+id/buttonHome"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center"
            android:layout_marginLeft="3.0dip"
            android:layout_marginRight="3.0dip"

            android:text="Home"
            android:backgroundTint="@color/orange" />
        <com.google.android.material.button.MaterialButton
            style="@style/CustomButtonStyle"
            android:id="@+id/buttonNext"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center"
            android:layout_marginLeft="3.0dip"
            android:layout_marginRight="3.0dip"

            android:text="Next" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/frameOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#B3000000"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true">

        <androidx.cardview.widget.CardView
            android:id="@+id/editDescriptionOverlay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="5.0dip"
            android:background="@drawable/border_drawable">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/editDescriptionContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Edit description here"
                    android:inputType="textMultiLine"
                    android:padding="8dp"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/saveDescriptionEditButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_margin="8dp"
                    android:text="Save" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/frameOverlayDetails"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#B3000000"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true">

        <androidx.cardview.widget.CardView
            android:id="@+id/editDetailsOverlay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="5.0dip"
            android:background="@drawable/border_drawable">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/editDetailsContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Edit details here"
                    android:inputType="textMultiLine"
                    android:padding="8dp"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/saveDetailsEditButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_margin="8dp"
                    android:text="Save" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </FrameLayout>
    </LinearLayout>
</RelativeLayout>

    <!-- Navigation Drawer -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        android:backgroundTint="@color/flash_blue"
        app:itemTextColor="@color/white"
        app:menu="@menu/nav_menu" />
</androidx.drawerlayout.widget.DrawerLayout>