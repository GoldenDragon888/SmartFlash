<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
  xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:background="@color/light_blue"
        android:id="@+id/rootView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/topBar"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:background="@color/flash_blue"
            android:layout_height="?attr/actionBarSize"
            android:layout_width="fill_parent"
            app:popupTheme="@style/AppTheme.PopupOverlay"/>
        <ImageView
            android:layout_gravity="start"
            android:id="@+id/imageView"
            android:layout_width="300.0dip"
            android:layout_height="64.0dip"
            android:src="@drawable/flashrocketimage"
            android:scaleType="fitCenter"
            android:layout_marginStart="50.0dip" />
        <TextView
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@+id/icon_text_view"
            android:layout_width="48.0dip"
            android:layout_height="64.0dip"
            android:text="XY"
            android:layout_toRightOf="@+id/imageView"
            android:textAlignment="center"
            android:autoSizeTextType="uniform"
            android:autoSizeStepGranularity="1.0sp"
            android:autoSizeMinTextSize="10.0sp"
            android:autoSizeMaxTextSize="20.0sp" />
        <LinearLayout
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:id="@+id/wordLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0.0dip"
            android:layout_below="@id/toolbar">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    android:id="@+id/front_card_view"
                    android:layout_width="0.0dip"
                    android:layout_height="60.0dip"
                    android:layout_margin="2.0dip"
                    android:layout_weight="3.0"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="10.0dip"
                    app:cardElevation="5.0dip">
                    <FrameLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent">
                        <FrameLayout
                            android:id="@+id/back_item_container"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent">
                            <ImageView
                                android:id="@+id/imageViewPart1"
                                android:background="@color/dark_blue"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:scaleType="fitCenter"
                                android:layout_weight="1.0" />
                            <FrameLayout
                                android:layout_gravity="bottom"
                                android:background="#22000000"
                                android:paddingTop="0.0dip"
                                android:paddingBottom="0.0dip"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:paddingStart="0.0dip"
                                android:paddingEnd="0.0dip">
                                <TextView
                                    android:id="@+id/back_item_text_view"
                                    android:layout_width="60dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginStart="0.0dip"
                                    android:layout_marginEnd="0.0dip"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    android:rotation="-90.0"
                                    android:gravity="center"
                                    android:textSize="20.0sp"
                                    android:textColor="@color/white"
                                    android:text="item"/>
                            </FrameLayout>
                        </FrameLayout>
                        <TextView
                            android:textSize="24.0sp"
                            android:gravity="center"
                            android:id="@+id/front_text_view"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:text="Word"
                            app:autoSizeMaxTextSize="24.0sp"
                            app:autoSizeMinTextSize="12.0sp"
                            app:autoSizeStepGranularity="2.0sp"
                            app:autoSizeTextType="uniform" />
                    </FrameLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    android:id="@+id/back_card_view"
                    android:layout_width="fill_parent"
                    android:layout_height="60.0dip"
                    android:layout_margin="2.0dip"
                    android:layout_weight="3.0"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="10.0dip"
                    app:cardElevation="5.0dip">
                    <FrameLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent">
                        <FrameLayout
                            android:id="@+id/back_desc_container"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent">
                            <ImageView
                                android:id="@+id/imageViewPart2"
                                android:background="@color/dark_blue"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:scaleType="fitCenter"
                                android:layout_weight="1.0" />
                            <FrameLayout
                                android:layout_gravity="bottom"
                                android:background="#22000000"
                                android:paddingTop="0.0dip"
                                android:paddingBottom="0.0dip"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:paddingStart="0.0dip"
                                android:paddingEnd="0.0dip">

                                <TextView
                                    android:id="@+id/back_desc_text_view"
                                    android:layout_width="60dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginStart="0.0dip"
                                    android:layout_marginEnd="0.0dip"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    android:rotation="-90.0"
                                    android:gravity="center"
                                    android:textSize="20.0sp"
                                    android:textColor="@color/white"
                                    android:text="desc"/>
                            </FrameLayout>
                        </FrameLayout>
                        <TextView
                            android:textSize="24.0sp"
                            android:gravity="center"
                            android:id="@+id/back_text_view"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:text="Description"
                            app:autoSizeMaxTextSize="24.0sp"
                            app:autoSizeMinTextSize="12.0sp"
                            app:autoSizeStepGranularity="2.0sp"
                            app:autoSizeTextType="uniform" />
                    </FrameLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    android:id="@+id/details_card_view"
                    android:layout_width="0.0dip"
                    android:layout_height="130.0dip"
                    android:layout_margin="2.0dip"
                    android:layout_weight="3.0"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="10.0dip"
                    app:cardElevation="5.0dip">
                    <FrameLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent">
                        <FrameLayout
                            android:id="@+id/back_details_container"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent">
                            <ImageView
                                android:id="@+id/imageViewPart3"
                                android:background="@color/dark_blue"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:scaleType="fitCenter"
                                android:layout_weight="1.0" />
                            <FrameLayout
                                android:layout_gravity="bottom"
                                android:background="#22000000"
                                android:paddingTop="0.0dip"
                                android:paddingBottom="0.0dip"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:paddingStart="0.0dip"
                                android:paddingEnd="0.0dip">
                                <TextView
                                    android:id="@+id/back_details_text_view"
                                    android:layout_width="60dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginStart="0.0dip"
                                    android:layout_marginEnd="0.0dip"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    android:rotation="-90.0"
                                    android:gravity="center"
                                    android:textSize="20.0sp"
                                    android:textColor="@color/white"
                                    android:text="details"
                                    />
                            </FrameLayout>
                        </FrameLayout>
                        <TextView
                            android:textSize="24.0sp"
                            android:gravity="center"
                            android:id="@+id/details_text_view"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:text="Details"
                            app:autoSizeMaxTextSize="24.0sp"
                            app:autoSizeMinTextSize="12.0sp"
                            app:autoSizeStepGranularity="2.0sp"
                            app:autoSizeTextType="uniform" />
                    </FrameLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    android:id="@+id/image_card_view"
                    android:layout_width="0.0dip"
                    android:layout_height="250.0dip"
                    android:layout_margin="2.0dip"
                    android:layout_weight="3.0"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="10.0dip"
                    app:cardElevation="5.0dip">
                    <FrameLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent">
                        <FrameLayout
                            android:id="@+id/back_image_container"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent">
                            <ImageView
                                android:id="@+id/imageViewPart4"
                                android:background="@color/dark_blue"
                                android:visibility="visible"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:scaleType="fitCenter"
                                android:layout_weight="1.0" />
                            <FrameLayout
                                android:layout_gravity="bottom"
                                android:background="#22000000"
                                android:paddingTop="0.0dip"
                                android:paddingBottom="0.0dip"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:paddingStart="0.0dip"
                                android:paddingEnd="0.0dip">
                                <TextView
                                    android:id="@+id/back_image_text_view"
                                    android:layout_width="60dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginStart="0.0dip"
                                    android:layout_marginEnd="0.0dip"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    android:rotation="-90.0"
                                    android:gravity="center"
                                    android:textSize="20.0sp"
                                    android:textColor="@color/white"
                                    android:text="image"/>
                            </FrameLayout>
                        </FrameLayout>
                        <ImageView
                            android:textSize="24.0sp"
                            android:gravity="center"
                            android:id="@+id/image_showCard"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            app:autoSizeMaxTextSize="24.0sp"
                            app:autoSizeMinTextSize="12.0sp"
                            app:autoSizeStepGranularity="2.0sp"
                            app:autoSizeTextType="uniform" />
                    </FrameLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <LinearLayout android:orientation="vertical"
                android:id="@+id/belowwordtext"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <LinearLayout android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/spinnerLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="130.0dip"
            android:layout_alignParentBottom="true">
            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:id="@+id/spinner_group"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10.0dip"
                android:weightSum="3.0">
                <Button
                    android:ellipsize="end"
                    android:id="@+id/button_category"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="0.0dip"
                    android:text="Category"
                    android:maxLines="3"
                    android:layout_weight="1.0"
                    android:backgroundTint="@color/flash_blue"
                    app:autoSizeMaxTextSize="16.0sp"
                    app:autoSizeMinTextSize="10.0sp"
                    app:autoSizeStepGranularity="2.0sp"
                    app:autoSizeTextType="uniform" />
                <Button
                    android:ellipsize="end"
                    android:id="@+id/button_subcat"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="0.0dip"
                    android:text="Subcat"
                    android:maxLines="3"
                    android:layout_weight="1.0"
                    android:backgroundTint="@color/flash_blue"
                    app:autoSizeMaxTextSize="16.0sp"
                    app:autoSizeMinTextSize="10.0sp"
                    app:autoSizeStepGranularity="2.0sp"
                    app:autoSizeTextType="uniform" />
                <Button
                    android:ellipsize="end"
                    android:id="@+id/button_difficulty"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="0.0dip"
                    android:text="Difficulty" android:maxLines="3"
                    android:layout_weight="1.0"
                    android:backgroundTint="@color/flash_blue"
                    app:autoSizeMaxTextSize="16.0sp"
                    app:autoSizeMinTextSize="10.0sp"
                    app:autoSizeStepGranularity="2.0sp"
                    app:autoSizeTextType="uniform" />
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:id="@+id/back_next"
                android:layout_width="fill_parent"
                android:layout_height="70.0dip"
                android:layout_marginBottom="-10.0dip"
                android:layout_alignParentBottom="true">
                <Button
                    android:id="@+id/back_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10.0dip"
                    android:text="Previous"
                    android:backgroundTint="@color/orange" />
                <Button
                    android:id="@+id/record_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Record StopStart"
                    android:backgroundTint="@color/flash_blue"
                    android:drawableTint="@color/blue" />
                <Button
                    android:id="@+id/next_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10.0dip"
                    android:text="Next"
                    android:backgroundTint="@color/orange" />
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:id="@+id/controlLayout"
                android:layout_width="fill_parent"
                android:layout_height="50.0dip"
                android:layout_marginBottom="-15.0dip"
                android:layout_above="@+id/back_next">
                <Button
                    android:id="@+id/play_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20.0dip"
                    android:text="Play Audio"
                    android:backgroundTint="@color/dark_green" />
                <Button
                    android:id="@+id/stop_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20.0dip"
                    android:text="Stop Audio"
                    android:backgroundTint="@color/dark_red" />
                <Button
                    android:id="@+id/audio_check"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Audio" />
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:id="@+id/difficultyLayout"
                android:layout_width="fill_parent"
                android:layout_height="51.0dip"
                android:layout_marginBottom="-5.0dip"
                android:layout_above="@+id/controlLayout">
                <Button
                    android:id="@+id/btnEasy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Easy" />
                <Button
                    android:id="@+id/btnMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Medium" />
                <Button
                    android:id="@+id/btnHard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hard" /> /> </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
    <com.google.android.material.navigation.NavigationView
        android:layout_gravity="start"
        android:id="@+id/nav_view"
        android:fitsSystemWindows="true"
        android:layout_width="200.0dip"
        android:layout_height="fill_parent"
        android:backgroundTint="@color/flash_blue"
        app:itemTextColor="@color/white"
        app:menu="@menu/nav_menu" />
</androidx.drawerlayout.widget.DrawerLayout>