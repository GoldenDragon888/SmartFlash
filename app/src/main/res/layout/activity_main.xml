<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/my_background_color"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Main Content Layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rootView">

        <!-- Image that spans the width of the screen -->
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_alignParentTop="true"
            android:src="@drawable/android_sfp_header"
            android:scaleType="fitXY" />

        <!-- Toolbar with Hamburger Icon -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="60dp"
            android:layout_height="45dp"
            android:background="@color/flash_blue"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

        <!-- Text View on top of the image to the right -->
        <TextView
            android:id="@+id/icon_text_view"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:text="XY"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:autoSizeTextType="uniform"
            android:autoSizeStepGranularity="1sp"
            android:autoSizeMinTextSize="10sp"
            android:autoSizeMaxTextSize="20sp" />

        <!-- Other content of the screen goes here -->

        <!-- wordLayout and its contents -->
        <LinearLayout
            android:id="@+id/wordLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageView"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <!-- Contents of wordLayout -->

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:id="@+id/front_card_view"
                android:layout_width="0.0dip"
                android:layout_height="60.0dip"
                android:layout_margin="2.0dip"
                android:layout_weight="3.0"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="10.0dip"
                app:cardElevation="5.0dip">
                <FrameLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">
                    <FrameLayout
                        android:id="@+id/back_item_container"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent">
                        <ImageView
                            android:id="@+id/imageViewPart1"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1.0"
                            android:background="@color/dark_blue"
                            android:scaleType="fitCenter" />
                        <FrameLayout
                            android:layout_gravity="bottom"
                            android:background="#22000000"
                            android:paddingTop="0.0dip"
                            android:paddingBottom="0.0dip"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:paddingStart="0.0dip"
                            android:paddingEnd="0.0dip">
                            <TextView
                                android:id="@+id/back_item_text_view"
                                android:layout_width="60dp"
                                android:layout_height="match_parent"
                                android:layout_marginStart="0.0dip"
                                android:layout_marginEnd="0.0dip"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                android:rotation="-90.0"
                                android:gravity="center"
                                android:textSize="20.0sp"
                                android:textColor="@color/white"
                                android:text="item"/>
                        </FrameLayout>
                    </FrameLayout>
                    <TextView
                        android:textSize="24.0sp"
                        android:gravity="center"
                        android:id="@+id/front_text_view"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:text="Word"
                        android:textColor="@color/black"
                        app:autoSizeMaxTextSize="24.0sp"
                        app:autoSizeMinTextSize="12.0sp"
                        app:autoSizeStepGranularity="2.0sp"
                        app:autoSizeTextType="uniform" />
                </FrameLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:id="@+id/back_card_view"
                android:layout_width="fill_parent"
                android:layout_height="60.0dip"
                android:layout_margin="2.0dip"
                android:layout_weight="3.0"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="10.0dip"
                app:cardElevation="5.0dip">
                <FrameLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">
                    <FrameLayout
                        android:id="@+id/back_desc_container"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent">
                        <ImageView
                            android:id="@+id/imageViewPart2"
                            android:background="@color/dark_blue"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:scaleType="fitCenter"
                            android:layout_weight="1.0" />
                        <FrameLayout
                            android:layout_gravity="bottom"
                            android:background="#22000000"
                            android:paddingTop="0.0dip"
                            android:paddingBottom="0.0dip"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:paddingStart="0.0dip"
                            android:paddingEnd="0.0dip">
                            <TextView
                                android:id="@+id/back_desc_text_view"
                                android:layout_width="60dp"
                                android:layout_height="match_parent"
                                android:layout_marginStart="0.0dip"
                                android:layout_marginEnd="0.0dip"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                android:rotation="-90.0"
                                android:gravity="center"
                                android:textSize="20.0sp"
                                android:textColor="@color/white"
                                android:text="desc"/>
                        </FrameLayout>
                    </FrameLayout>
                    <TextView
                        android:textSize="24.0sp"
                        android:gravity="center"
                        android:id="@+id/back_text_view"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:text="Description"
                        android:textColor="@color/black"
                        app:autoSizeMaxTextSize="24.0sp"
                        app:autoSizeMinTextSize="12.0sp"
                        app:autoSizeStepGranularity="2.0sp"
                        app:autoSizeTextType="uniform" />
                </FrameLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:id="@+id/details_card_view"
                android:layout_width="0.0dip"
                android:layout_height="130.0dip"
                android:layout_margin="2.0dip"
                android:layout_weight="3.0"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="10.0dip"
                app:cardElevation="5.0dip">
                <FrameLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">
                    <FrameLayout
                        android:id="@+id/back_details_container"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent">
                        <ImageView
                            android:id="@+id/imageViewPart3"
                            android:background="@color/dark_blue"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:scaleType="fitCenter"
                            android:layout_weight="1.0" />
                        <FrameLayout
                            android:layout_gravity="bottom"
                            android:background="#22000000"
                            android:paddingTop="0.0dip"
                            android:paddingBottom="0.0dip"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:paddingStart="0.0dip"
                            android:paddingEnd="0.0dip">
                            <TextView
                                android:id="@+id/back_details_text_view"
                                android:layout_width="60dp"
                                android:layout_height="match_parent"
                                android:layout_marginStart="0.0dip"
                                android:layout_marginEnd="0.0dip"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                android:rotation="-90.0"
                                android:gravity="center"
                                android:textSize="20.0sp"
                                android:textColor="@color/white"
                                android:text="details"/>
                        </FrameLayout>
                    </FrameLayout>
                    <TextView
                        android:textSize="24.0sp"
                        android:gravity="center"
                        android:id="@+id/details_text_view"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:text="Details"
                        android:textColor="@color/black"
                        app:autoSizeMaxTextSize="24.0sp"
                        app:autoSizeMinTextSize="12.0sp"
                        app:autoSizeStepGranularity="2.0sp"
                        app:autoSizeTextType="uniform"/>
                </FrameLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:id="@+id/image_card_view"
                android:layout_width="0.0dip"
                android:layout_height="250.0dip"
                android:layout_margin="2.0dip"
                android:layout_weight="3.0"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="10.0dip"
                app:cardElevation="5.0dip">
                <FrameLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">
                    <FrameLayout
                        android:id="@+id/back_image_container"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent">
                        <ImageView
                            android:id="@+id/imageViewPart4"
                            android:background="@color/dark_blue"
                            android:visibility="visible"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:scaleType="fitCenter"
                            android:layout_weight="1.0"/>
                        <FrameLayout
                            android:layout_gravity="bottom"
                            android:background="#22000000"
                            android:paddingTop="0.0dip"
                            android:paddingBottom="0.0dip"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:paddingStart="0.0dip"
                            android:paddingEnd="0.0dip">
                            <TextView
                                android:id="@+id/back_image_text_view"
                                android:layout_width="60dp"
                                android:layout_height="match_parent"
                                android:layout_marginStart="0.0dip"
                                android:layout_marginEnd="0.0dip"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                android:rotation="-90.0"
                                android:gravity="center"
                                android:textSize="20.0sp"
                                android:textColor="@color/white"
                                android:text="image"/>
                        </FrameLayout>
                    </FrameLayout>
                    <ImageView
                        android:textSize="24.0sp"
                        android:gravity="center"
                        android:id="@+id/image_showCard"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        app:autoSizeMaxTextSize="24.0sp"
                        app:autoSizeMinTextSize="12.0sp"
                        app:autoSizeStepGranularity="2.0sp"
                        app:autoSizeTextType="uniform"/>
                </FrameLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <LinearLayout android:orientation="vertical"
            android:id="@+id/belowwordtext"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <LinearLayout android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Spinner Layout -->
        <LinearLayout
            android:id="@+id/spinner_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/wordLayout"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="3">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_category"
                style="@style/CustomButtonStyle"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:text="Category"
                android:gravity="center"
                android:maxLines="3"
                android:ellipsize="none"
                app:autoSizeTextType="uniform"
                app:autoSizeMinTextSize="12sp"
                app:autoSizeMaxTextSize="18sp"
                app:autoSizeStepGranularity="1sp" />


            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_subcat"
                style="@style/CustomButtonStyle"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:text="Subcategory"
                android:gravity="center"
                android:maxLines="3"
                android:ellipsize="none"
                app:autoSizeTextType="uniform"
                app:autoSizeMinTextSize="12sp"
                app:autoSizeMaxTextSize="18sp"
                app:autoSizeStepGranularity="1sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_difficulty"
                style="@style/CustomButtonStyle"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:text="Difficulty"
                android:gravity="center"
                android:maxLines="3"
                android:ellipsize="none"
                app:autoSizeTextType="uniform"
                app:autoSizeMinTextSize="12sp"
                app:autoSizeMaxTextSize="18sp"
                app:autoSizeStepGranularity="1sp" />
        </LinearLayout>

    <!-- Difficulty Layout -->
    <LinearLayout
        android:id="@+id/difficultyLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/spinner_group"
        android:orientation="horizontal"
        android:gravity="center">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnEasy"
            style="@style/CustomButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:text="Easy" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnMedium"
            style="@style/CustomButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:text="Medium" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnHard"
            style="@style/CustomButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:text="Hard" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonEdit"
            style="@style/CustomButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:text="Edit" />
    </LinearLayout>

    <!-- controlLayout and back_next layouts -->
    <LinearLayout
        android:id="@+id/controlLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/difficultyLayout"
        android:gravity="center"
        android:orientation="horizontal">
        <com.google.android.material.button.MaterialButton
            android:id="@+id/play_button"
            style="@style/CustomButtonStyle"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:backgroundTint="@color/dark_green"
            android:text="Play Audio" />

        <com.google.android.material.button.MaterialButton
            style="@style/CustomButtonStyle"
            android:id="@+id/stop_button"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:backgroundTint="@color/dark_red"
            android:text="Stop Audio" />

        <com.google.android.material.button.MaterialButton
            style="@style/CustomButtonStyle"
            android:id="@+id/audio_check"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:text="Audio" />
    </LinearLayout>
    <!-- Bottom Control Layouts -->
    <!-- 'Previous', 'Record StopStart', 'Next' Button Layout -->
    <LinearLayout
        android:id="@+id/back_next"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/controlLayout"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/back_button"
            style="@style/CustomButtonStyle"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:text="Previous"
            android:backgroundTint="@color/orange"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/record_button"
            style="@style/CustomButtonStyle"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Record StopStart"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:backgroundTint="@color/flash_blue"
            android:drawableTint="@color/blue"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/next_button"
            style="@style/CustomButtonStyle"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="Next"
            android:backgroundTint="@color/orange"/>
    </LinearLayout>
</RelativeLayout>

    <!-- Navigation Drawer -->
<com.google.android.material.navigation.NavigationView
    android:id="@+id/nav_view"
    android:layout_width="200dp"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    android:fitsSystemWindows="true"
    android:backgroundTint="@color/flash_blue"
    app:itemTextColor="@color/white"
    app:menu="@menu/nav_menu" />

    </androidx.drawerlayout.widget.DrawerLayout>